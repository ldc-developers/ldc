// See comments in driver/config.d in ldc source tree for grammar description of
// this config file.

// The default section is required.
// For cross-compilation, you can add additional sections for specific target
// triples by naming the sections as (quoted) regex patterns. See LDC's `-v`
// output (`config` line) to figure out your normalized triple, depending on
// the used `-mtriple`. E.g.:
//   "^arm.*-linux": { ... };
//   "x86_64-.*-linux": { ... };
//   "i[3-6]86-.*-windows-msvc": { ... };
// Later sections take precedence, but inherit missing values from previous
// matching sections (incl. the default section).
default:
{
    // default switches injected before all explicit command-line switches
    switches = [
        "-defaultlib=phobos2-ldc,druntime-ldc",@ADDITIONAL_DEFAULT_LDC_SWITCHES@
    ];
    // default switches appended after all explicit command-line switches
    post-switches = [
        "-I@INCLUDE_INSTALL_DIR@/ldc",
        "-I@INCLUDE_INSTALL_DIR@",
        "-L-L@CMAKE_INSTALL_LIBDIR@",@MULTILIB_ADDITIONAL_INSTALL_PATH@
    ];
    // default rpath when linking against the shared default libs
    rpath = "@SHARED_LIBS_INSTALL_RPATH@";
};
